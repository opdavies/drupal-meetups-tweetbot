{
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "jublonet/codebird-php": "^3.1",
        "pimple/pimple": "^3.0",
        "symfony/console": "^4.0",
        "tightenco/collect": "^5.6",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "symfony/var-dumper": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
